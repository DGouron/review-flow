{
  "name": "claude-review-automation",
  "version": "1.0.0",
  "description": "Automatic code review trigger via webhooks for GitLab/GitHub MRs/PRs",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && cp -r src/dashboard dist/",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest --run --coverage",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^8.3.1",
    "dotenv": "^16.4.0",
    "fastify": "^4.26.0",
    "p-queue": "^8.0.0",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "tsx": "^4.7.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
